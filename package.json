{
  "name": "uiforge-mcp",
  "version": "0.4.2",
  "description": "AI-driven UI generation via Model Context Protocol. Generate React, Next.js, Vue, Angular applications from natural language. Screenshot-to-code, interactive prototypes, design mockups, accessibility auditing. Zero cost, open source.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "uiforge-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "tsup",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/index.js",
    "clean": "rm -rf dist coverage .tsbuildinfo node_modules/.cache",
    "validate": "npm run lint:check && npm run format:check && npm run test",
    "validate:all": "npm run lint; npm run format:check; npx tsc --noEmit; npm test; npm run build",
    "docker:build": "docker build -t uiforge-mcp:latest .",
    "docker:run": "docker run -i uiforge-mcp:latest",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --onlyChanged",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "validate-model": "tsx src/scripts/validate-model.ts",
    "deps:check": "ncu",
    "deps:update": "ncu -u",
    "deps:update-interactive": "ncu -i",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm run build",
    "lint:check": "eslint . --ext .js,.ts",
    "pre-commit": "npm run lint && npm run format && npm run test",
    "prepack": "npm run build",
    "publish": "npm publish --access public",
    "integrate": "node scripts/integrate.js",
    "integrate:mcp-gateway": "node scripts/integrate.js --project=mcp-gateway",
    "integrate:uiforge-mcp": "node scripts/integrate.js --project=uiforge-mcp",
    "integrate:uiforge-webapp": "node scripts/integrate.js --project=uiforge-webapp"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@resvg/resvg-js": "^2.6.2",
    "better-sqlite3": "^12.6.2",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "satori": "^0.19.2",
    "sharp": "^0.34.5",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.17.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.14",
    "@types/sharp": "^0.32.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.3",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.55.0",
    "@types/fs-extra": "^11.0.1",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "ui-generation",
    "react",
    "nextjs",
    "vue",
    "angular",
    "typescript",
    "tailwindcss",
    "frontend",
    "web-development",
    "component-library",
    "design-system",
    "prototyping",
    "accessibility",
    "figma",
    "screenshot-to-code",
    "code-generation",
    "cli-tool",
    "docker",
    "npm-package",
    "open-source",
    "ai-tools",
    "ui-components",
    "responsive-design",
    "wcag",
    "a11y",
    "productivity"
  ],
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "ajv": "^8.18.0"
  }
}
